{
    "manifest_version": 2,

    "name": "DTEK Checker",
    "version": "1.0.0",
    "description": "Monitoring DTEK site for planning power offs",
    "background": {
      "scripts": ["libs/jquery/jquery-3.4.0.js","scripts/shared.js","scripts/background.js"],
      "persistent": true
    },
    "browser_action":{
		"default_title":"DTEK Helper",
		"default_popup":"popup.html"
    },
    "options_page" : "options.html",
    "permissions":[

        "https://*/",
        "background",

        "storage",
        "notifications"
	]

}
